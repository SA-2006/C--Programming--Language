#include <stdio.h>
int main()
{
	int n;
	printf("Enter the size of your array: ");
	scanf("%d", &n);
	
	int arr[n];
	
	printf("Enter the elements of your array: \n");
	for(int i=0; i<n; i++)
	{
		printf("Enter element number %d: ", i);
		scanf("%d",&arr[i]);
	}
	
	printf("The elements of your original array are: \n");
	for(int i=0; i<n; i++)
	{
		printf("%d ",arr[i]);
	}
	printf("\n");
	
	for(int j=0; j<n; j++)
	{
		if(arr[j] % 2 == 0)	// checking for even
		{
			arr[j]=0;
		}
		else                // checking for odd
		{
			arr[j]=1;
		}
	}
	
	for(int k=0; k<(n-1); k++)  //bubble sorting
	{
		for(int l=0; l<(n-1-k); l++)
		{
			if(arr[l]>arr[l+1])
			{
				int temp=arr[l];
				arr[l]=arr[l+1];
				arr[l+1]=temp;
			}
		}
	}
	
	
	printf("The elements of transformed array are: \n");
	for(int i=0; i<n; i++)
	{
		printf("%d ",arr[i]);
	}
	
return 0;
}
