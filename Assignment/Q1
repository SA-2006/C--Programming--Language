#include <stdio.h>
int main()
{
	int n;
	printf("Enter the size of your array: ");
	scanf("%d", &n);
	
	int arr[n];
	
	printf("Enter the elements of your array: \n");
	for(int i=0; i<n; i++)
	{
		printf("Enter element number %d: ", i);
		scanf("%d",&arr[i]);
	}
	
	int sum[n]={0};
	
	for(int j=0; j<n; j++)
	{
		for(int k=0; k<=j; k++)
		{
			sum[j]+=arr[k];
		}	
	}
	
	printf("The elements of your original array are: \n");
	for(int i=0; i<n; i++)
	{
		printf("%d ",arr[i]);
	}
	printf("\n");
	printf("The elements of sum array are: \n");
	for(int i=0; i<n; i++)
	{
		printf("%d ",sum[i]);
	}
	
return 0;
}
