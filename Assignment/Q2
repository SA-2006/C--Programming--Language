#include <stdio.h>

int main() {
    int n;

    printf("Enter n (half the number of elements): ");
    scanf("%d", &n);

    int size = 2 * n;
    int nums[size];

    printf("Enter the %d elements of the array:\n", size);
    for (int i = 0; i < size; i++) {
        scanf("%d", &nums[i]);
    }

    int shuffled[size];

    for (int i = 0; i < n; i++) {
        shuffled[2 * i] = nums[i];       
        shuffled[2 * i + 1] = nums[i + n]; 
    }

    printf("Shuffled array: ");
    for (int i = 0; i < size; i++) {
        printf("%d ", shuffled[i]);
    }
    printf("\n");

    return 0;
}
