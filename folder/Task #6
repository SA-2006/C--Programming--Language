#include <stdio.h>
#include <math.h>
int main()
{
int grade,total=0,count=0,below=0,mid=0,high=0,avg=0;	
do
{

printf("Enter grade or -1 to stop: ");
scanf("%d",&grade);	

if((grade>=0) && (grade<50))
{
	below+=1;
}
else if((grade>=50) && (grade<=70))
{
	mid+=1;
}
else if((grade>70) && (grade<=100))
{
	high+=1;
}


printf("Your entered grade is: %d\n",grade);
total+=grade;
count+=1;
}
while(grade!=-1);
avg=total/count;
printf("The average grade is: %d\n",avg);
printf("The grades below 50 are: %d\n",below);
printf("The grades between 50 and 70 are: %d\n",mid);
printf("The grades above 70 are: %d\n",high);
return 0;
}
