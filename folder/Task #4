#include <stdio.h>

int main() {
    int n, i;
    long long first = 0, second = 1, next, sum = 0;

    printf("Enter the number of terms (n): ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Please enter a positive integer.\n");
        return 0;
    }

    printf("Fibonacci Sequence up to %d terms:\n", n);

    for (i = 1; i <= n; i++) {
        if (i == 1) {
            next = 0;
        } else if (i == 2) {
            next = 1;
        } else {
            next = first + second;
            first = second;
            second = next;
        }

        printf("%lld ", next); 
        sum += next;           
    }

    printf("\nSum of Fibonacci sequence up to %d terms = %lld\n", n, sum);

    return 0;
}
